    function documentOnDoSearch(evt) {
        var dataToSend = evt.searchParams;

        $('#location_container, #issn_container').removeClass('hidden');

        dataToSend.push({
            'name': 'sysScreens[<?php echo $this->locationNamespace;?>]',
            'value': []
        });

        dataToSend.push({
            'name': 'sysScreens[<?php echo $this->issnNamespace;?>]',
            'value': []
        });

        $('#barcode').val('').parent().block();
        $('#search_form_container').block();
        $(document).queue(function() {
            $('#location_container > div').block($('<?php echo $this->SysScreenWaitPrompt('Applying filter...');?>'));
            $('#issn_container > div').block($('<?php echo $this->SysScreenWaitPrompt('Applying filter...');?>'));
            $.post(
                '<?php echo $this->url(array('action' => 'search'));?>',
                dataToSend,
                onDataReady,
                'json'
            );
        }).queue(function() {
            $('#location_container > div, #issn_container > div, #search_form_container').unblock();
            $('#barcode').parent().unblock();
            $(this).dequeue();
        });
    }
    
    function searchBtnOnClick(evt) {
        evt.preventDefault();
        var searchEvent = $.Event('do-search');
        searchEvent.searchParams = $('#SEARCH_RESULTS_FORM').serializeArray();
        $('#SEARCH_RESULTS_FORM').trigger(searchEvent);
    }
    
    function makeReport(format, sysScreen) {
        var nameSpace = '';
        switch (sysScreen) {
            case '<?php echo $this->locationSsName;?>' :
                nameSpace = '<?php echo $this->locationNamespace?>';
                break;
            case '<?php echo $this->issnSsName;?>' :
                nameSpace = '<?php echo $this->issnNamespace?>';
                break;
            default:
                throw new Exception('Unknown Sys Screen: "' + sysScreen + '"');
        }

        location.href = '<?php echo $this->url(array('action' => 'report'));?>/report_format/' + escape(format) + '/namespace/' + escape(nameSpace);
    }

