    function printProductLabel() {

        if (typeof productLabelDialogGetProdId != 'function')
            throw 'Product Label Dialog is not initialized';

        var selectedProdId = productLabelDialogGetProdId();

        if (selectedProdId == '') {
            showWarnings(['No Product ID selected. Please select one.']);
            return;
